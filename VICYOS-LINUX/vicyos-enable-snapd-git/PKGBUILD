# Maintainer: Felipe Ndc (Vicyos) <felipendc10@gmail.com>
pkgname=vicyos_enable_snapd-git
_pkgname=vicyos_enable_snapd
_destname1="/etc/systemd/system/sockets.target.wants/"
_destname2="/usr/lib/systemd/system/"
_destname3="/"

_licensedir="/usr/share/vicyos/licenses/"

pkgver=20.4.23
pkgrel=1
pkgdesc="Enable snapd for vicyoslinux"
arch=('any')
url="https://github.com/felipendc/vicyos_enable_snapd"
license=('GPL3')
makedepends=('git')
depends=()
replaces=($_pkgname)
conflicts=($_pkgname)
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/felipendc/${_pkgname}.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	install -dm755 ${pkgdir}${_destname2}
	install -dm755 ${pkgdir}${_destname3}

	rm -r  ${srcdir}/${_pkgname}/.git
	rm -r  ${srcdir}/${_pkgname}/LICENSE

	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname1}
	cp -r  ${srcdir}/${_pkgname}${_destname2}* ${pkgdir}${_destname2}
	cp -r  ${srcdir}/${_pkgname}${_destname3}* ${pkgdir}${_destname3}
}
