# Maintainer: Felipe Ndc (Vicyos) <felipendc10@gmail.com>
pkgname=vicyos-deepin-terminal-config-git
_pkgname=vicyos-deepin-terminal-config
_destname1="/etc/skel/.config/deepin/deepin-terminal/"
_destname2="/etc/skel/.config/deepin/deepin-terminal/"

_licensedir="/usr/share/vicyos/licenses/"
pkgver=20.2.26
pkgrel=1
pkgdesc="vicyos-deepin-terminal-config for vicyoslinux"
arch=('any')
url="https://github.com/felipendc/vicyos-deepin-terminal-config"
license=('GPL3')
makedepends=('git')
depends=()
replaces=($_pkgname)
conflicts=($_pkgname)
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/felipendc/${_pkgname}.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	install -dm755 ${pkgdir}${_destname2}

	rm -r  ${srcdir}/${_pkgname}/.git
	rm -r  ${srcdir}/${_pkgname}/setup-git-v1.sh
	rm -r  ${srcdir}/${_pkgname}/git-v2.sh
	rm -r  ${srcdir}/${_pkgname}/LICENSE	
	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname2}

	
}