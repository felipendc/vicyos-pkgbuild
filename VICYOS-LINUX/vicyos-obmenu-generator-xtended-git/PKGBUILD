# Maintainer: Felipe Ndc (Vicyos) <felipendc10@gmail.com>
pkgname=vicyos-obmenu-generator-xtended-git
_pkgname=vicyos-obmenu-generator-xtended
_destname1="/etc/skel/.config/obmenu-generator/"
_destname2="/etc/skel/.config/obmenu-generator/"
_licensedir="/usr/share/vicyos/licenses/"
pkgver=20.3.19
pkgrel=1
pkgdesc="obmenu-generator for vicyoslinux"
arch=('any')
url="https://github.com/felipendc/vicyos-obmenu-generator-xtended-git"
license=('GPL3')
makedepends=('git')
depends=()
replaces=($_pkgname)
conflicts=("$_pkgname" "arcolinux-obmenu-generator-git" "arcolinux-obmenu-generator-minimal-git")
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/felipendc/${_pkgname}.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	install -dm755 ${pkgdir}${_destname2}

	rm -r  ${srcdir}/${_pkgname}/.git
	rm -r  ${srcdir}/${_pkgname}/setup-git-v1.sh
	rm -r  ${srcdir}/${_pkgname}/git-v1.sh
	rm -r  ${srcdir}/${_pkgname}/LICENSE	
	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname2}	
}