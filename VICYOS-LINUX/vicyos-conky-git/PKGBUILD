# Maintainer: Felipe Ndc (Vicyos) <felipendc10@gmail.com>
pkgname=vicyos-conky-git
_pkgname=vicyos-conky
_destname1="/.config/autostart/"
_destname2="/.lua/scripts/"

_destname3="/etc/skel/.config/autostart/"
_destname4="/etc/skel/.lua/scripts/"
_destname5="/etc/skel/"

_licensedir="/usr/share/vicyos/licenses/"
pkgver=20.2.9
pkgrel=1
pkgdesc="concky for vicyoslinux"
arch=('any')
url="https://github.com/felipendc/vicyos-conky"
license=('GPL3')
makedepends=('git')
depends=()
replaces=('vicyos-conky-orange-hlwm-1366x768p' 'vicyos-conky-orange-hlwm-1920x1080p' 'vicyos-conky-orange-git' 'vicyos-conky-git')
conflicts=('vicyos-conky-orange-hlwm-1366x768p' 'vicyos-conky-orange-hlwm-1920x1080p' 'vicyos-conky-orange-git' 'vicyos-conky-git')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/felipendc/${_pkgname}.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	install -dm755 ${pkgdir}${_destname2}
	install -dm755 ${pkgdir}${_destname3}
	install -dm755 ${pkgdir}${_destname4}
	install -dm755 ${pkgdir}${_destname5}

	rm -r  ${srcdir}/${_pkgname}/.git
	rm -r  ${srcdir}/${_pkgname}/setup-git.sh
	rm -r  ${srcdir}/${_pkgname}/git-v2.sh
	rm -r  ${srcdir}/${_pkgname}/LICENSE	
	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname3}
	cp -r  ${srcdir}/${_pkgname}${_destname2}* ${pkgdir}${_destname4}
	cp -r  ${srcdir}/${_pkgname}/.conkyrc ${pkgdir}${_destname5}
	
}
