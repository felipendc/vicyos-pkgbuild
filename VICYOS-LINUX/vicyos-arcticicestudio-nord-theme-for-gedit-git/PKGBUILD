# Maintainer: Felipe Ndc (Vicyos) <felipendc10@gmail.com>
pkgname=vicyos-arcticicestudio-nord-theme-for-gedit-git
_pkgname=vicyos-arcticicestudio-nord-theme-for-gedit
_destname1="/etc/skel/.local/share/gedit/styles/"
_licensedir="/usr/share/vicyos/licenses/"
pkgver=20.9.10
pkgrel=1
pkgdesc="nord-theme-for-gedit by arcticicestudio"
arch=('any')
url="https://github.com/felipendc/vicyos-arcticicestudio-nord-sublime-text.git"
license=('Apache 2.0')
makedepends=('git')
depends=()
replaces=($_pkgname)
conflicts=($_pkgname)
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/felipendc/${_pkgname}.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	
	rm -r  ${srcdir}/${_pkgname}/.git
	rm -r  ${srcdir}/${_pkgname}/setup-git.sh
	rm -r  ${srcdir}/${_pkgname}/git-v2.sh
	rm -r  ${srcdir}/${_pkgname}/LICENSE	
	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname1}
}